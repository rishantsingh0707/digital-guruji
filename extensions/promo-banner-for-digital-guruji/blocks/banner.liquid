{% comment %}
Promo Banner Block
{% endcomment %}
<div id="promo-banner-{{ block.id }}"
     style="
        background: {{ block.settings.bg_color }};
        color: {{ block.settings.text_color }};
        text-align: center;
        padding: 12px 20px;
        font-size: 16px;
        position: relative;
        width: 100%;
        max-width: 100vw;
        margin: 0;">

  <p style="margin:0;">{{ block.settings.text }}</p>

  {% if block.settings.show_close %}
    <button onclick="document.getElementById('promo-banner-{{ block.id }}').style.display='none'"
            style="position:absolute;
                   right:10px;
                   top:5px;
                   background:none;
                   border:none;
                   color: {{ block.settings.text_color }};
                   font-size:18px;
                   cursor:pointer;">
      âœ–
    </button>
  {% endif %}
</div>

{% schema %}
{
  "name": "Promo Banner",
  "target": "section",
  "settings": [
    {
      "type": "text",
      "id": "text",
      "label": "Banner text",
      "default": "ðŸŽ‰ Free Shipping on All Orders! ðŸŽ‰"
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background color",
      "default": "#111111"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text color",
      "default": "#ffffff"
    },
    {
      "type": "checkbox",
      "id": "show_close",
      "label": "Show close button",
      "default": true
    }
  ]
}
{% endschema %}
